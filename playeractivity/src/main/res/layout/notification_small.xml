<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@android:color/black"
    >

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        >

        <TextView
            android:id="@+id/notification_track_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:text="this is the track title!"
            />

        <TextView
            android:id="@+id/notification_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="this is the track artist!"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/notification_track_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="this is the track release!"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12dp"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/play_pause_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play_pause_button"
        />

    <ImageButton
        android:id="@+id/skip_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/skip_button"
        />

</LinearLayout>